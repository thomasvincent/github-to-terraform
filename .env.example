# GitHub Configuration
GITHUB_USERNAME=your_github_username
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_API_URL=https://api.github.com
GITHUB_TIMEOUT=30
GITHUB_MAX_RETRIES=3

# Terraform Cloud Configuration
TFE_ORG=your_terraform_cloud_organization
TFE_TOKEN=your_terraform_cloud_api_token
TFE_WORKSPACE=default

# Alternative: S3 Backend Configuration (uncomment if using S3)
# TF_BACKEND=s3
# TF_STATE_BUCKET=your-terraform-state-bucket
# TF_STATE_KEY=github-terraform/terraform.tfstate
# TF_STATE_REGION=us-east-1

# Terraform Settings
TF_PARALLELISM=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/github-to-terraform.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Import Configuration
IMPORT_BATCH_SIZE=50
IMPORT_DRY_RUN=false
IMPORT_FORCE=false
IMPORT_RESOURCE_TYPES=repository,branch,branch_protection,webhook,deploy_key,team,collaborator

# Exclude/Include Patterns (comma-separated)
# IMPORT_EXCLUDE_PATTERNS=test-*,tmp-*
# IMPORT_INCLUDE_PATTERNS=production-*,staging-*

# Monitoring Configuration
MONITORING_ENABLED=true
PROMETHEUS_PORT=8000
METRICS_PREFIX=github_terraform
HEALTH_CHECK_INTERVAL=30

# Database Configuration (for Docker development)
DB_PASSWORD=CHANGE_ME_BEFORE_USE
POSTGRES_DB=terraform_state
POSTGRES_USER=terraform

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Development Settings
PYTHONDEBUG=0
PYTHONUNBUFFERED=1